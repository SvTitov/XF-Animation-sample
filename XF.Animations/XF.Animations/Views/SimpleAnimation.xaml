<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Animations.Views.SimpleAnimation"
             Title="Simple animation">
    <ContentPage.Content>
        <StackLayout 
            Orientation="Vertical"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <AbsoluteLayout
                     x:Name="_panel"/>
            <StackLayout
                x:Name="_slPanel"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="StartAndExpand"
                Orientation="Horizontal">
                <Image Source="fallout.png"
                   x:Name="_img"
                   WidthRequest="50"
                   HeightRequest="50"/>
                <Image Source="fallout.png"
                       x:Name="_img2"
                       WidthRequest="50"
                       HeightRequest="50"/>
                <Image Source="fallout.png"
                       x:Name="_img3"
                       WidthRequest="50"
                       HeightRequest="50"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>